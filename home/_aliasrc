#generic
alias cal="gcal"
alias sl='ls'
alias cd..="cd .."
alias tunnel="ssh  -q -N -f -D 9999 vanyli.net"
alias COMPUTER="sudo"
alias ppjson="python -m json.tool"
alias flushdns="sudo dscacheutil -flushcache;sudo killall -HUP mDNSResponder"
#git
alias gpl="git pull"
alias gps="git push"
alias wow="git status"
alias such="git"
alias very="git"
alias authdebug="export OAUTHLIB_INSECURE_TRANSPORT=1"

function trs {
    trns --f en -t cs $1;
    say $1;
}

function take {
    mkdir -p $1 && cd $1
}

function fag {
    if [ -z ${1} ]; then
	echo "find . -type -f -exec grep -l '' {} \;"
	return 0
    fi;

    echo "looking for: ${1}"
    find . -type f -exec grep -l $1 {} \;
}

function server {
    python3 -m http.server 8090
}

#python
alias delpyc="find . -name '*.py[co]' -delete"
